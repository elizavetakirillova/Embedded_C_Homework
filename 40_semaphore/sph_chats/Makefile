CC = gcc
CFLAGS = -g
	
all: build clean

build:
	chmod +x run_server.sh
	chmod +x run_client.sh

clean:
	rm -rf *.o *.out

run_sv:
	./run_server.sh
	
run_cl:
	./run_client.sh

